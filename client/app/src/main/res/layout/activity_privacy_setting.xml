<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".profile.PrivacySettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:background="@color/primary"
            android:scaleType="fitCenter"
            android:src="@drawable/back_button_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_bg_secondary"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_sensor_collection_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="16dp"
                android:text="Sensor Collection"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Light Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Humidity Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <Switch
                android:id="@+id/switch_sensor_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Pressure Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_proximity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Proximity Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_magnetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Magnetic Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_gyroscope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Gyroscope Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Temperature Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_stepDetector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Step Detector Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switch_sensor_accelerometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Accelerometer Sensor"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>