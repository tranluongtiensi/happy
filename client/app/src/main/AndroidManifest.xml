            android:name=".tracking.TrackingCameraDrinkingActivity"
            android:exported="false" />
        <activity
            android:name=".tracking.TrackingCameraEatingActivity"
            android:exported="false" />
        <activity
            android:name=".tracking.TrackingVideoActivity"
            android:exported="false" />
